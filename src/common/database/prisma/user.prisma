enum Role {
    USER
    EMPLOYEE
    MODERATOR
}

model User {
    id       Int    @id @default(autoincrement())
 
    firstNames String @default("")
    lastNames  String @default("")

    email    String @unique
    password String

    role   Role   @default(USER)

    employee Employee?
    costumer Costumer?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    Cart Cart?

    Order Order[]
    Billing Billing[]
    Review Review[]
}

model Employee {
    id        Int    @id @default(autoincrement())

    userId Int?  @unique
    user   User? @relation(fields: [userId], references: [id])

    branchId Int
    branch   Branch @relation(fields: [branchId], references: [id])

    positionId Int
    position   Position @relation(fields: [positionId], references: [id])

    startDate DateTime
    endDate   DateTime?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Costumer {
    id Int @id @default(autoincrement())

    phone   String
    address String

    userId Int  @unique
    user   User @relation(fields: [userId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Position {
    id          Int        @id @default(autoincrement())
    name        String     @unique
    description String?
    employees   Employee[]
    createdAt   DateTime   @default(now())
    updatedAt   DateTime   @updatedAt
}
